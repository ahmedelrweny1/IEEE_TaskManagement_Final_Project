@{
	Layout = null;
    @model LoginVM
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="css/loginStyle.css">
@* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"> *@
</head>
<body>
    <div class="wrapper">
        <div class="form_wrapper sign_in">
            <form asp-action="direct" asp-controller="Login">
                <h2>Sign In</h2>
                <div class="input_ground">
                    <input asp-for="username" required>
                    <label for="">Username</label>
                </div>
                <div class="input_ground">
                    <input asp-for="Password" type="password" required>
                    <label for="">Password</label>
                </div>
                <div class="slider">
                    <select asp-for="category">
                        <option value="1">Admin</option>
                        <option value="2">Super Visor</option>
                        <option value="3">Employee</option>
                    </select>
                </div>
                <button type="submit">Sign In</button>
            </form>
        </div>
    </div>
    <script src="js/main.js"></script>
</body>
</html>