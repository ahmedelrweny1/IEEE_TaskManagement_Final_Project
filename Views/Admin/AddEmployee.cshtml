@{
	Layout = null;
	@model Employee ;
    var depts = ViewBag.Departments as List<Department>;
    var supers = ViewBag.SuperVisors as List<SuperVisor>;
}
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Sign Up Form</title>
          <link rel="stylesheet" href="/css/AddEmployee.css">
          <link rel="stylesheet" href="/css/LoginStyle.css">
          <link rel="stylesheet" href="/css/all.min.css">
          <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    </head>
    <body>

      <form asp-action="SaveEmployee" asp-controller="Admin" method="post">

        <h1>Sign Up</h1>

        <fieldset>

          <legend><span class="number">1</span> Your basic info</legend>

          <label asp-for="Name"> </label>
          <input asp-for="Name">

          <label asp-for="Email" type ="Email"></label>
          <input asp-for="Email">

          <label asp-for="Password" type="password" ></label>
          <input asp-for="Password">

          <label asp-for="Adress"></label>
          <input asp-for="Adress" />

          <label asp-for="Age"></label>
          <input asp-for="Age" />
          <select asp-for="Dept_Id" class="slider">
            @foreach(var dept in depts)
            {
              <option value="@dept.Id">@dept.Name</option>
            }
        </select>
        <select asp-for="Super_Id" class ="slider">
            @foreach(var super in supers)
            {
              <option value="@super.Id">@super.Name</option>
            }
        </select>
        </fieldset>

   <button class="btn btn-success" type="submit">Add Employee</button>

      </form>

    </body>
</html>

