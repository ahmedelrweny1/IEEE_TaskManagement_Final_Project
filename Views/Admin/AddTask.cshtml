@{
	Layout = null;
	@model BigTask;
    var depts = ViewBag.Departments as List<Department>;
    var supers = ViewBag.SuperVisors as List<SuperVisor>;
}
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Sign Up Form</title>
          <link rel="stylesheet" href="/css/AddTask.css">
          <link rel="stylesheet" href="/css/all.min.css">
          <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    </head>
    <body>

      <form asp-action="SaveTask" asp-controller="Admin" method="post">

        <h1>Sign Up</h1>

        <fieldset>

          <legend><span class="number">1</span> Task info</legend>

          <label asp-for="Name"> </label>
          <input asp-for="Name">

          <label asp-for="Description" type ="Email"></label>
          <input asp-for="Description">

          <label asp-for="DeadtLine"></label>
          <input asp-for="DeadtLine">
          <br />
          <label asp-for="StartLine"></label>
          <input asp-for="StartLine">
          <br />

          <label asp-for="Progress"></label>
          <input asp-for="Progress" />

          <label asp-for="State"></label>
          <input asp-for="State" />

          <select asp-for="Dept_Id" class="slider">
            @foreach(var dept in depts)
            {
              <option value="@dept.Id">@dept.Name</option>
            }
        </select>
        <br />     
        <br />
        <select asp-for="Super_Id" class ="slider">
            @foreach(var super in supers)
            {
              <option value="@super.Id">@super.Name</option>
            }
        </select>
        </fieldset>
        <br />     
        <br />

   <button type="submit" class="btn btn-success">Add Task</button>


      </form>

    </body>
</html>

