@{
    Layout = null;
    @model SuperVisor ;
    var depts = ViewBag.Departments as List<Department>;
}
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Sign Up Form</title>
          <link rel="stylesheet" href="/css/AddSuperVisor.css">
          <link rel="stylesheet" href="/css/all.min.css">
          <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    </head>
    <body>

      <form asp-action="SaveSuperVisor" asp-controller="Admin" method="post">

        <h1>Sign Up</h1>

        <fieldset>

          <legend><span class="number">1</span> Your basic info</legend>

          <label asp-for="Name"> </label>
          <input asp-for="Name">

          <label asp-for="Email" type ="Email"></label>
          <input asp-for="Email">

          <label asp-for="Password" type="password" ></label>
          <input asp-for="Password">

          <label asp-for="Adress"></label>
          <input asp-for="Adress" />

          <label asp-for="Age"></label>
          <input asp-for="Age" />
          <select asp-for="Dept_Id" class="slider">
                @foreach (var dept in depts)
                {
                  <option value="@dept.Id">@dept.Name</option>
                }
        </select>
        <br />
        <br />

        </fieldset>

   <button class="btn btn-success" type="submit">Add SuperVisor</button>

      </form>

    </body>
</html>

